{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6"],
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@middlewares": ["./src/middlewares/index.ts"],
            "@src/*": ["./src/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@logger": ["./src/utils/logger.ts"],
            "@express-types": ["./src/types/index.ts"]
        }
    },
    "include": ["./src/**/*"]
}
